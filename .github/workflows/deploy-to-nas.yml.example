name: Deploy to Synology NAS

on:
  push:
    branches: [ main, master ]
  workflow_dispatch: {}

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Hugo
        uses: peaceiris/actions-hugo@v2
        with:
          hugo-version: '0.149.1'
          extended: true

      - name: Build
        run: hugo --minify

      - name: Deploy via rsync to NAS
        uses: easingthemes/ssh-deploy@v2.4.0
        env:
          SSH_PRIVATE_KEY: ${{ secrets.NAS_SSH_PRIVATE_KEY }}
          ARGS: '-avzr --delete'
          SOURCE: 'public/'
          REMOTE_HOST: ${{ secrets.NAS_HOST }}
          REMOTE_USER: ${{ secrets.NAS_USER }}
          REMOTE_PORT: ${{ secrets.NAS_PORT || '22' }}
          TARGET: ${{ secrets.NAS_TARGET_DIR }}

